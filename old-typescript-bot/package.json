{
  "name": "weavebot-typescript",
  "version": "1.0.0",
  "description": "WeaveBot TypeScript implementation with Markdowner integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["telegram", "bot", "scraping", "airtable", "events"],
  "author": "WeaveBot Team",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.15.6",
    "axios": "^1.6.5",
    "airtable": "^0.12.2",
    "openai": "^4.24.7",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
} 